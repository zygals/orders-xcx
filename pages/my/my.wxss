page {
  background: #fff;
}

.myinfo {
  width: 100%;
  height: 251rpx;
  position: relative;
}

.myinfo .cont {
  padding: 52rpx 74rpx;
}

.order_w {
  margin-top: 76rpx;
  border-top: 1rpx solid #dcdcdc;
}

.myinfo .vistar {
  margin-right: 75rpx;
}

.vistar image {
  width: 123rpx;
  height: 123rpx;
}

.myinfo-headimgurl {
  width: 100%;
  height: 100%;
  opacity: 0.5;
}

.myinfo-title {
  position: absolute;
  top: 70rpx;
  left: 0rpx;
  width: 100%;
  height: 280rpx;
  /*background: #fff;*/
